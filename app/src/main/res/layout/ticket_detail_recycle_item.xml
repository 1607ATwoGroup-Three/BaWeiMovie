<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:background="@drawable/my_linear"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:layout_height="70dp">

    <TextView
        android:textSize="12sp"
        android:textColor="#666666"
        android:id="@+id/screeningHall"
        android:text="hahaha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/screeningHall"
        android:text="国语3D"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screeningHall">
            <TextView
                android:id="@+id/cinema_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="17:50"
                android:textSize="24sp" />

            <View
                android:id="@+id/cinema_view"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:background="#949494"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/cinema_time1" />

            <TextView
                android:id="@+id/cinema_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/cinema_view"
                android:text="16:26"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/cinema_time2"
                android:text="end"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/cinema_next">

            <TextView
                android:id="@+id/cinema_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="6dp"
                android:text="￥"
                android:textSize="18sp" />

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/cinema_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cinema_money"
                android:text="53.9"
                android:textColor="#c749d2"
                android:textSize="36dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/cinema_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/com_icon_next_default" />
</RelativeLayout>
