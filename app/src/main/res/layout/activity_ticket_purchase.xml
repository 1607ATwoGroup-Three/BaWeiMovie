<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".avtivity.TicketPurchaseActivity">

    <TextView
        android:id="@+id/movie_ticket_name"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="35dp"
        android:text="铁血战士"
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/movie_ticket_colse"
        android:layout_below="@id/movie_ticket_name"
        android:textColor="#b11450"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:text="选择合适的影院"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_ticket_recycle"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/movie_ticket_colse"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/movie_ticket_back"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/com_icon_my_defaul"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</RelativeLayout>