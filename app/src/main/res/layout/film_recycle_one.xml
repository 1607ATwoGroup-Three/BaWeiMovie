<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/film_one_text"
        android:textSize="16sp"
        android:text="热门电影"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="4dp"
        android:layout_below="@id/film_one_text"
        android:background="@drawable/film_recycle_text"
        android:layout_width="50dp"
        android:layout_height="5dp" />
    <ImageView
        android:id="@+id/film_one_img_ani"
        android:layout_marginTop="4dp"
        android:layout_below="@id/film_one_text"
        android:background="@drawable/cinema_ed"
        android:layout_width="10dp"
        android:layout_height="5dp" />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/film_one_img"
        android:layout_alignParentRight="true"
        android:src="@mipmap/com_icon_next_default"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_below="@id/film_one_text"
        android:id="@+id/film_one_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
