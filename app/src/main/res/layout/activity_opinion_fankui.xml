<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivity.my.OpinionFankuiActivity">

    <TextView
        android:id="@+id/opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"/>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/opinion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/icon_fankui_ok"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈成功"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="感谢您对维度影院的关注与支持，我们会认真处理您的反"
            android:layout_marginTop="30dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="馈，尽快修复和完善相关功能。"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/OpinionFK_Back"
        android:layout_alignParentBottom="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/com_icon_my_defaul"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="26dp"/>

</RelativeLayout>