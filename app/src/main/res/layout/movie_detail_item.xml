<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_linear"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Ping_Huifu_img"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/Ping_Huifu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <TextView
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="24dp"
        android:text=""
        android:id="@+id/Ping_Huifu_content"
        android:ellipsize="end"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:maxLines="5"
        />
    <LinearLayout
        android:id="@+id/line2"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ping_Huifu_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Ping_Huifu_time"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#333333"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/Ping_Huifu_love"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/com_icon_praise_default"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/Ping_Huifu_DianZaiShu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#333333"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/com_icon_comment_default"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/Ping_Huifu_HuiFuShu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#333333"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/line2"
        android:layout_width="312dp"
        android:layout_height="1dp"
        android:background="#f1eeee"/>

</RelativeLayout>