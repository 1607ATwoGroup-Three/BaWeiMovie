<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="126dp"
    android:layout_height="164dp">
    <ImageView
        android:id="@+id/film_recycle_item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:background="@drawable/film_recycle_text_bj"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/film_recycle_item_img_two"
        android:background="@drawable/film_recycle_text"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_width="3dp"
        android:layout_height="18dp" />
    <TextView
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/film_recycle_item_img_two"
        android:layout_toRightOf="@id/film_recycle_item_img_two"
        android:id="@+id/film_recycle_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
