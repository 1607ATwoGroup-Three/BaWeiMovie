<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/my_beijing"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/my_icon_remind_default"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"/>
        <ImageView
            android:id="@+id/head"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@mipmap/my_icon_user_head"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/myName"
            android:layout_below="@+id/head"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冬天来了"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"/>
        <Button
            android:background="@drawable/my_qiandao"
            android:layout_below="@+id/myName"
            android:layout_marginTop="12dp"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:text="签到"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="86dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="86dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:background="@mipmap/my_icon_messiage_default"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:textSize="12sp"
                    android:textColor="#333333"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>