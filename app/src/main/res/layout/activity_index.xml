<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivity.IndexActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/index_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/viewpager_rg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/viewpager_rb1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/viewpager_circle_selected"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/viewpager_rb2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/viewpager_circle_selected"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RadioButton
            android:id="@+id/viewpager_rb3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/viewpager_circle_selected"
            android:button="@null"
            android:layout_marginRight="10dp"/>

        <RadioButton
            android:id="@+id/viewpager_rb4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/viewpager_circle_selected"
            android:button="@null" />
    </RadioGroup>
</RelativeLayout>