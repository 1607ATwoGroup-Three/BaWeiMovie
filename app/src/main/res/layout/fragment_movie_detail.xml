<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MovieDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/my_linear">

        <RelativeLayout
            android:id="@+id/film_detail_rels2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/predator"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/film_detail_rels3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_toRightOf="@id/predator"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="类型："
                        android:textColor="#333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/detail_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="动作/科幻/冒险"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="导演："
                        android:textColor="#333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/detail_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="沙恩 布莱克"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="时长："
                        android:textColor="#333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/details_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="时长：106分钟"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="产地："
                        android:textColor="#333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/details_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="美国"
                        android:textColor="#333333"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/film_detail_rels4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/film_detail_rels2"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧情简介"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/alpha_style"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_below="@id/synopsis"
                android:layout_marginTop="6dp"
                android:background="@drawable/cinema_ed" />

            <TextView
                android:id="@+id/detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alpha_style"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="一位男孩(雅各布特仑布莱 饰) 偶然间打开了尘封的箱子，触发了特殊机关，唤醒了宇宙最强猎手--铁血战士。"
                android:textColor="#333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/film_detail_rels5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/film_detail_rels4"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演职人员"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/alpha_style1"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_below="@id/cast"
                android:layout_marginTop="6dp"
                android:background="@drawable/cinema_ed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/film_detail_rels6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_detail_rels5"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/details_btn1"
                android:layout_width="75dp"
                android:layout_height="32dp"
                android:background="@drawable/login_login"
                android:gravity="center"
                android:text="演员名字"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/details_btn2"
                android:layout_width="75dp"
                android:layout_height="32dp"
                android:layout_marginLeft="150dp"
                android:layout_toRightOf="@id/details_btn1"
                android:background="@drawable/cinema_ed"
                android:gravity="center"
                android:text="饰演角色"
                android:textColor="#fff"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/film_detail_rels7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_detail_rels6"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="柏一德·霍伯卢克"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detail_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="伊冯娜·霍伯卢克"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detail_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="奥利维亚·霍伯卢克"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detail_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="雅各布·霍伯卢克"
                android:textColor="#333333"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_detail_rels7"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="下滑查看更多"
            android:textColor="#333333"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/film_detail_rels8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_detail_rels6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饰"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="饰"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="饰"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="饰"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_detail_rels6"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/film_detail_rels8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXX"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="XXXXXX"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="XXXXXXX"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="XXXX"
                android:textColor="#6b0e3d"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/details_img"
        android:layout_width="110dp"
        android:layout_height="151dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/login_login" />

</RelativeLayout>