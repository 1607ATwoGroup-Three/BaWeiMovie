<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8d2ec"
    tools:context=".avtivity.MovieListActivity">

    <ImageView
        android:id="@+id/movie_list_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/com_icon_loc_white_default" />

    <TextView
        android:textSize="14sp"
        android:layout_marginLeft="6dp"
        android:layout_alignTop="@id/movie_list_img"
        android:id="@+id/movie_list_whilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_list_img"
        android:text="北京"
        android:textColor="#ffffff" />
    <LinearLayout
        android:id="@+id/movie_list_lin"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:background="@drawable/film_edtext_style"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:src="@mipmap/com_icon_search_default"
            android:layout_marginLeft="7dp"
            />
        <EditText
            android:id="@+id/movie_list_ed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="请输入要搜索的影片"
            android:textSize="11sp"
            android:background="@null"
            android:textColor="#f1f3f1"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/movie_list_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginRight="24dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/movie_list_lin_two"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/movie_list_lin"
        android:layout_width="312dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/movie_list_pop"
            android:textSize="14sp"
            android:gravity="center"
            android:text="热门电影"
            android:layout_width="83dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/movie_list_Showing"
            android:layout_marginLeft="25dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="正在热映"
            android:layout_width="83dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/movie_list_soon"
            android:layout_marginLeft="25dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="即将上映"
            android:layout_width="83dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_list_lin_rey"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/movie_list_lin_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>